<div class='container'>
  <h1>Cedar Validations</h1>

  <table class='table'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Code</th>
        <th>Description</th>
        <th>Overview Text</th>
        <th>QRDA Type</th>
        <th>Measure Type</th>
        <th colspan='3'>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @validations.each do |validation| %>
        <tr>
          <td><%= validation.name %></td>
          <td><%= validation.code %></td>
          <td><%= validation.description %></td>
          <td><%= validation.overview_text %></td>
          <td><%= validation.qrda_type %></td>
          <td><%= validation.measure_type %></td>
          <!-- <td><%= link_to 'Show', validation %></td> -->
          <td><%= link_to 'Edit', edit_validation_path(validation) %></td>
          <td><%= link_to 'Destroy', validation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Validation', new_validation_path %>
</div>
