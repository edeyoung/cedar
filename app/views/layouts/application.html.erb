<!DOCTYPE html>
<html lang="en">
<head>
  <title>Cedar</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.png', type: 'image/png' %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body class='cedar'>

  <nav class='navbar navbar-inverse navbar-fixed-top' style='overflow-y: visible;' role='navigation'>
    <div class='container'>
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class='navbar-header'>
        <a class='navbar-brand' href='/'>
          <img alt='Brand' class='img-responsive center-block' src='/assets/cedar_header_logo.png'>
        </a>
        <button class='navbar-toggle' data-target='#bs-example-navbar-collapse-1' data-toggle='collapse' type='button'>
          <span class='sr-only'>Toggle navigation</span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
          <span class='icon-bar'></span>
        </button>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class='collapse navbar-collapse' id='bs-example-navbar-collapse-1'>
        <ul class='nav navbar-nav navbar-right'>
          <li>
            <%= link_to root_url do %>
              <i class='glyphicon glyphicon-tasks'></i> Dashboard
            <% end %>
          <li>
            <%= link_to '/about' do %>
              <i class='glyphicon glyphicon-flag'></i> About
            <% end %>
          <li>
            <%= link_to '/feedback' do %>
              <i class='glyphicon glyphicon-comment'></i> Feedback
            <% end %>
          <li>
            <%= link_to '/help' do %>
              <i class='glyphicon glyphicon-question-sign'></i> Help
            <% end %>
          <li class="dropdown">
            <a aria-expanded="false" aria-haspopup="true" class="dropdown-toggle" data-toggle="dropdown" href="#" role="button">
              <i class='glyphicon glyphicon-user'></i> Account<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path, method: :get do %>
                  <i class='glyphicon glyphicon-cog'></i> Account Settings
                <% end %>
              </li>
              <li style="list-style: none; display: inline">
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class='glyphicon glyphicon-minus-sign'></i> Sign Out
                <% end %>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <%= yield %>

  <footer class='footer'>
    <div class='container'>
      <p>Copyright Â© 2016, The MITRE Corporation. All rights reserved.</p>
    </div>
  </footer>

</body>
</html>
